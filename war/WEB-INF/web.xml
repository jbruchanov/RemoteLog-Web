<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<servlet>
		<servlet-name>dataservice</servlet-name>
		<servlet-class>com.scurab.gwt.rlw.server.data.DataServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dataservice</servlet-name>
		<url-pattern>/remotelogweb/dataservice</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>regs</servlet-name>
		<servlet-class>com.scurab.gwt.rlw.server.data.RegistrationConnector
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>regs</servlet-name>
		<url-pattern>/regs</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logs</servlet-name>
		<servlet-class>com.scurab.gwt.rlw.server.data.LogItemsConnector
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logs</servlet-name>
		<url-pattern>/logs</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>RemoteLogWeb.html</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>
			com.scurab.gwt.rlw.server.Application
		</listener-class>
	</listener>
</web-app>
