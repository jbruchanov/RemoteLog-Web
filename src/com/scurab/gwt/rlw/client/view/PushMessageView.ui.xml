<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.scurab.gwt.rlw.language.Words" field="res"/>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.header{
			font-size : 14px;
			margin-bottom: 5px;
	 		font-weight: bold;
	 		min-width: 100px;
		}
		
		.params{
	 		min-width: 350px;
		}
		
	</ui:style>
	<g:HTMLPanel width="98%">
		<g:CaptionPanel captionText="{res.PushNotifiation}" width="100%" >
			<g:Grid width="100%">
			<g:row>
				<g:customCell>
					<g:Label text="{res.Message}" styleName="{style.header}"/>
				</g:customCell>
				<g:customCell>
					<g:ListBox width="98%" ui:field="mMessageListBox" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{res.Context}" styleName="{style.header}"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox width="98%" ui:field="mContext" styleName="{style.params}"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{res.Params}" styleName="{style.header}"/>
				</g:customCell>
				<g:customCell>
					<g:TextArea width="98%" visibleLines="10" ui:field="mMessageParams" styleName="{style.params}"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{res.TryWaitForRespond}" styleName="{style.header}" visible="false"/>
				</g:customCell>
				<g:customCell>
					<g:CheckBox text="" ui:field="mWaitCheckBox" visible="false"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label ui:field="mErrorMessage"/>
				</g:customCell>
				<g:customCell>
					<g:Button ui:field="mSendButton" text="{res.Send}"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		</g:CaptionPanel>
	</g:HTMLPanel>
</ui:UiBinder> 