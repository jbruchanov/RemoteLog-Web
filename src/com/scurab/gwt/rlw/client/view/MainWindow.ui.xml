<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:com.scurab.gwt.rlw.client.controls">
	<ui:with type="com.scurab.gwt.rlw.language.Words" field="res"></ui:with>
	<ui:style>
		.contentHolder {
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
			background-color: #d7dde8;
			vertical-align: top;
			overflow: auto;
		}
		
		.important {
			font-weight: bold;
		}
		
		.top_panel {
			height: 75px;
		}
		
		.bottom_panel {
			height: 50px;
		}
		
		.center_panel {
			background-color: #FFF;
			padding: 5px;
			overflow: auto;
		}
		
		.menu {
			width: 99%;
			/*background-color: #d7dde8;
			border-right: 1px solid #c3c3c3;*/
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
		}
		.scrollable{
			overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.contentHolder}">
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:north size="4">
				<g:HTMLPanel styleName="{style.top_panel}" />
			</g:north>
			<g:west size="12">
				<g:HTMLPanel styleName="{style.menu}">
					<g:StackLayoutPanel ui:field="mMenuStack"  width="100%" height="100%">
						<g:stack>
							<g:header size="35">
								<ui:text from="{res.Applications}" />
							</g:header>
							<g:HTMLPanel ui:field="mMenuItems" styleName="{style.scrollable}">								
							</g:HTMLPanel>
						</g:stack>
					</g:StackLayoutPanel>
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<g:HTMLPanel styleName="{style.center_panel}" ui:field="contentPanel" />
			</g:center>
			<g:south size="2">
				<g:HTMLPanel styleName="{style.bottom_panel}" />
			</g:south>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 