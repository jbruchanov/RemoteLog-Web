<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.contentHolder {
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
			background-color: #d7dde8;
			vertical-align: top;
			overflow: auto;
		}
		
		.important {
			font-weight: bold;
		}
		
		.left_panel {
			width: 150px;
		}
		
		.top_panel {
			height: 150px;
		}
		
		.bottom_panel {
			height: 50px;
		}
		
		.center_panel {
			background-color: #FFF;
			padding: 5px;
			overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.contentHolder}">
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:west size="15">
				<g:HTMLPanel styleName="{style.left_panel}" />
			</g:west>
			<g:north size="7.7">
				<g:HTMLPanel styleName="{style.top_panel}" />
			</g:north>
			<g:center>
				<g:HTMLPanel styleName="{style.center_panel}" ui:field="contentPanel" />
			</g:center>
			<g:south size="2">
				<g:HTMLPanel styleName="{style.bottom_panel}" />
			</g:south>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 